{
    "compilerOptions": {
        "noEmit": true,
        "allowImportingTsExtensions": true,
        "outDir": "dist",
        "target": "es2021",
        "module": "esnext",
        "moduleResolution": "node",
        "strict": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noImplicitAny": true,
    },
    "include": [
        "src",
        "server"
    ],
    "exclude": [
        "node_modules",
        "dist",
    ],
    "ts-node": {
        "esm": true,
        "experimentalSpecifierResolution": "node"
    }
}
